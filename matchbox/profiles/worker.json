{
    "id": "worker",
    "name": "worker",
    "boot": {
      "kernel": "/assets/vmlinuz",
      "initrd": ["/assets/initramfs.xz"],
      "args": [
        "initrd=initramfs.xz",
        "init_on_alloc=1",
        "slab_nomerge",
        "pti=on",
        "console=tty0",
        "printk.devkmsg=on",
        "talos.platform=metal",
        "ip={{ .ip }}::{{ .gateway }}:{{ .netmask }}:{{ .hostname }}:eth0:off",
        "talos.config=http://matchbox:8080/assets/worker.yaml"
      ]
    }
  }
