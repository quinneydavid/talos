{
    "id": "control-plane",
    "name": "control-plane",
    "boot": {
      "kernel": "/assets/vmlinuz",
      "initrd": ["/assets/initramfs.xz"],
      "args": [
        "initrd=initramfs.xz",
        "init_on_alloc=1",
        "slab_nomerge",
        "pti=on",
        "console=tty0",
        "console=ttyS0",
        "printk.devkmsg=on",
        "talos.platform=metal",
        "ip=dhcp",
        "talos.config=http://matchbox.lan:8080/metadata?mac=${mac}"
      ]
    },
    "generic_assets": [
      {
        "source": "/var/lib/matchbox/assets/controlplane-cp1.yaml",
        "destination": "/config.yaml"
      }
    ]
}
