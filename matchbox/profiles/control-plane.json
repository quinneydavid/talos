{
  "id": "control-plane",
  "name": "Talos Control Plane Node",
  "boot": {
    "kernel": "vmlinuz",
    "initrd": ["initramfs.xz"],
    "args": [
      "initrd=initramfs.xz",
      "init_on_alloc=1",
      "slab_nomerge",
      "pti=on",
      "console=tty0",
      "console=ttyS0",
      "printk.devkmsg=on",
      "talos.platform=metal",
      "talos.config=http://matchbox.lan:8080/assets/controlplane-${id}.yaml"
    ]
  }
}
